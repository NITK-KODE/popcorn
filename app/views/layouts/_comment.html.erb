<%= form_with(model:@comment , url: comment_path(obj), method: "create" ,  html:{class:"form-inline"}) do |f| %>

 
    <div class="field">
    <%= f.text_field :comment , class:"form-control mb-2 mr-sm-2"%>
    </div>  
    <div class="actions">
      <%= f.submit "comment" , class:"btn btn-primary mb-2"%>
    </div>
<% end %>