<div class="container postholder">
  <div class="row">
     <div class="col-9"><p class="username" ><img class="rounded-circle" src="<%=asset_path('logo.png')%>"> <a href="<%=profile_path(obj.user)%>"><%=obj.user.username.capitalize if obj.user.username%></a></p></div>
     <div class="col-3"><p class="date"><%=obj.created_at.strftime("%d %b")%></p></div>
  </div>
  <div class="row">
    <div class="col-12"><p class="pop"><%=obj.post%></p></div>
    
 </div>
 <div class="row">
  <div class="col-8 response">
    <%if obj.liked?(current_user)%>
    
    <i class="bi bi-heart-fill"></i>
    <%else%>
    
    <%= link_to '<i class="bi bi-heart"></i>'.html_safe , like_path(obj) , remote:true, method: :put  %>
    
    <%end%>
   
    <%= link_to '<i class="bi bi-chat-square-dots"></i>'.html_safe , post_path(obj) %>
    <i class="bi bi-arrow-90deg-right"></i>
  </div>
  <div class="col-4 d-flex justify-content-end like-count"><p><%=pluralize(obj.likes.count , "Heart")%> </p></div> 
</div>




