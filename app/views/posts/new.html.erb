<div class="container mx-auto w-1/2 pt-10">


    <%= form_with(model:@posts) do |f| %>

    
  

    <textarea name="post" rows="5"  spellcheck="false" placeholder="What's in your mind?"
              class="p-5 shadow-md text-secondary text-3xl rounded-t-3xl rounded-bl-3xl bg-white w-full"></textarea>

  
        

    <div class="flex justify-end">
        <%= f.submit "Post" ,class:"px-10 pt-3 pb-3 rounded-full bg-indigo-700 shadow-md text-white ml-auto"%>
    </div>
    <% end %>


  </div>

