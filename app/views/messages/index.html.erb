<!-- <div class="inner">Hello</div> -->
<div class="pb-12">




<div class="container mx-auto pb-12 chat-box overflow-auto" data-user-id=<%=current_user.id%>>

        <%@messages.each do |message|%>
        
          <% if message.user_id == current_user.id%>
             <div class="flex flex-row justify-end ">
               <p class="message-text text-sm font-light inline bg-blue-300  p-3 mt-2 mb-2 rounded-t-full rounded-bl-full">
                 <%= message.message%>
               </p>
             </div>
          <%else%>

      <div class="flex flex-row justify-start ">
        <p class="message-text text-sm font-light  inline bg-green-300  p-3 mt-2 mb-2 rounded-t-full rounded-br-full">
          <%= message.message%>
        </p>
      </div>
          <%end%>
        <%end%>
 
   
</div>
  <%= form_with url:messages_path , method:"post" ,local: false , class:"chat-form fixed bottom-0 w-full bg-yellow-300" do |f|%>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="flex flex-row justify-between items-center">


      

        <%=f.text_field :message  , class:"message-box w-full bg-transparent pl-8 placeholder-yellow-900 p-5" , autocomplete:"off", placeholder:"Enter message here"%>


  <%= f.submit "Send", class:"message-button bg-transparent pr-8"%>

    </div>

<%end%>
</div>